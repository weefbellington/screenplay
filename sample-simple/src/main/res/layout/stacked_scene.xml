<?xml version="1.0" encoding="utf-8"?>

<com.davidstemmer.screenplay.sample.simple.view.ModalSceneView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/modal_scene_text"
        style="@style/TutorialText"/>
    <Button
        android:id="@+id/show_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/modal_scene_dialog_button_text"/>
    <Button
        android:id="@+id/show_action_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/modal_scene_action_drawer_button_text"/>
    <Button
        android:id="@+id/show_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/show_page"/>
</com.davidstemmer.screenplay.sample.simple.view.ModalSceneView>